<html>
	<head>
		<title>My Forms</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	</head>
	<body id="clients">
		<div class="container-fluid">
			<% if (messages && messages['error'].length > 0) { %>
			  <div class="alert alert-danger securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['error'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %>
			<% if (messages && messages['warning'].length > 0) { %>
			  <div class="alert alert-warning securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['warning'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %>
			<% if (messages && messages['success'].length > 0) { %>
			  <div class="alert alert-success securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['success'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %>
			
			<h3 id="table-title">Clients</h3>
			<div id="client-add" class="panel panel-default">
			  <div class="panel-heading">Create Client</div>
			  <div class="panel-body">
			  	<form class="form-horizontal" id="clientCreate" action="client/create">
				  <div class="form-group">
				    <label class="control-label col-sm-2" for="clientName">Name:</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="clientName" name="clientName" placeholder="Enter clients name...">
				    </div>
				  </div>
				  <div class="form-group">
				    <label class="control-label col-sm-2" for="clientAddress">Address:</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="clientAddress" name="clientAddress" placeholder="Enter address...">
				    </div>
				  </div>
				  <div class="form-group phone-number">
				    <label class="control-label col-sm-2" for="clientPhone">Phone:</label>
				    <div class="col-sm-10">
				      <div class="col-xs-3">
                        <input type="tel" name="phone" class="form-control" value="" size="3" maxlength="3" required="required" title="">
                      </div>
                      <div class="col-xs-3">
                        <input type="tel" name="phone" class="form-control" value="" size="3" maxlength="3" required="required" title="">
                      </div>
                      <div class="col-xs-4">
                        <input type="tel" name="phone" class="form-control" value="" size="4" maxlength="4" required="required" title="">
                      </div>
				   </div>
				  </div>
				  <div class="form-group">
				    <label class="control-label col-sm-2" for="clientContact">Contact:</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="clientContact" name="clientContact" placeholder="Enter contact name...">
				    </div>
				  </div>
				  <div class="form-group">
				    <label class="control-label col-sm-2" for="clientEmail">Email:</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="clientEmail" name="clientEmail" placeholder="Enter email...">
				    </div>
				  </div>
				  <div class="form-group"> 
				    <div class="col-sm-offset-2 col-sm-10">
				      <button type="submit" class="btn btn-default pull-right">Submit</button>
				      <button type="button" id="clientAddClose" class="btn btn-default pull-right btn-close" onclick="closeClientAddPanel()">Close</button>
			  		  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
				    </div>
				  </div>
				</form>
			  </div>
			</div>
			<table id="table-clients" class="table table-striped" data-sorting="true" data-filtering="true">
				<thead>
					<tr>
						<!--- Must have data-type="html" on all data-breakpoints="all" or <ahref=""> table data in Footable Plugin --->
						<th>Name</th>
						<th>ID</th>
						<th data-type="html" data-breakpoints="all" data-title="Address">Address</th>
						<th data-type="html" data-breakpoints="all" data-title="Phone">Phone</th>
						<th data-type="html" data-breakpoints="all" data-title="Contact">Contact</th>
						<th data-type="html" data-breakpoints="all" data-title="Email">Email</th>
						<th data-filterable="false" data-sortable="false"><button id="clientAdd" onclick="createButtonAddEvent(this.id)" class="btn btn-sm btn-primary">Add</button></th>	
					</tr>
				</thead>
				<tbody>
				  <% _.each(clients, function(client){ %>
					<tr data-expanded="false" id="client-records" data-id="<%= client.id %>" data-model="clients">
						<td><%= client.client %></td>
						<td><%= client.id %></td>
						<td><%= client.address %></td>
						<td><%= client.phone %></td>
						<td><%= client.contact %></td>
						<td><%= client.email %></td>
					</tr>
				  <% }) %>
				</tbody>
			</table>
		</div>
	</body>
</html> 