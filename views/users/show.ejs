<html>
	<head>
		<title>Leaflet Mobile Map</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	</head>
	<body>
		<div class="show-users" >
			<% if (messages && messages['error'].length > 0) { %>
			  <div class="alert alert-danger securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['error'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %>
			<% if (messages && messages['warning'].length > 0) { %>
			  <div class="alert alert-warning securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['warning'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %>
			<% if (messages && messages['success'].length > 0) { %>
			  <div class="alert alert-success securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['success'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %>
			<!-- If no profile image then show default image else show profile image stored in database -->
			<% if(!user[0].profileimage){ %>
				<img id="imageProfile" src="/images/no-profile.png" height="300" width="300"><br/>
			<% }else{ %>
				<img id="imageProfile" src="/user/profileImg?email=<%- user[0].email %>" height="300" width="300"><br/>
			<% } %>
			<h1><%- user[0].firstname %> <%- user[0].lastname %></h1>
			<% if(user[0].admin){ %>
				<span class="glyphicon glyphicon-eye-open" style="font-size: 20px;"> Administrator</span> 
			<% }else{ %>
				<span class="glyphicon glyphicon-eye-close" style="font-size: 20px;"> Viewer</span> 
			<% } %>
			<hr>
			<h3>Contact: <%- user[0].email %></h3>
			
			<a class="btn btn-medium btn-primary" href="/users/edit?email=<%= user[0].email %>">Edit</a>
		</div>
	</body>
</html>