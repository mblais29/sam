<html>
	<head>
		<title>Security Page</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	</head>
	<body id="propertiesIndex">
		<div class="container-fluid users">
			<% if (messages && messages['error'].length > 0) { %>
			  <div class="alert alert-danger securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['error'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %>
			<% if (messages && messages['warning'].length > 0) { %>
			  <div class="alert alert-warning securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['warning'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %>
			<% if (messages && messages['success'].length > 0) { %>
			  <div class="alert alert-success securityMessage">
			  <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
			  <% messages['success'].forEach(function(message) { %>
			    <%= message %>
			    <br>
			  <% }); %>
			  </div>
			  <br>
			<% } %> 
			<h3 id="table-title">Properties</h3>
			<div id="property-add" class="panel panel-default">
			  <div class="panel-heading">Create Property</div>
			  <div class="panel-body">
			  	<form class="form-horizontal" id="propertyCreate" action="properties/create">
				  <div class="form-group" id="property-cli">
				    
				  </div>
				  <div class="form-group">
				    <label class="control-label col-sm-2" for="propertyAddress">Address:</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="propertyAddress" name="property-address" placeholder="Enter address...">
				    </div>
				  </div>
				  <div class="form-group">
				    <label class="control-label col-sm-2" for="propertyDesc">Description:</label>
				    <div class="col-sm-10">
				      <textarea class="form-control" rows="5" id="propertyDesc" name="property-desc"></textarea>
				    </div>
				  </div>
				  <div class="form-group"> 
				    <div class="col-sm-offset-2 col-sm-10">
				      <button type="submit" class="btn btn-default pull-right">Submit</button>
				      <button type="button" id="propertyClose" class="btn btn-default pull-right btn-close" onclick="closePropertyAddPanel()">Close</button>
			  		  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
				    </div>
				  </div>
				</form>
			  </div>
			</div>
			
			<div id="property-edit" class="panel panel-default">
			  <div class="panel-heading">Edit Property Details</div>
			  <div class="panel-body">
			  	<form class="form-horizontal" id="propertyEdit" action="/properties/update">
			  	  <div class="form-group">
				    <label class="control-label col-sm-2" for="property-id">ID:</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="property-id" name="property-id" readonly>
				    </div>
				  </div>
				  <div class="form-group" id="property-client">
				    
				  </div>
				  <div class="form-group">
				    <label class="control-label col-sm-2" for="property-address">Address:</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="property-address" name="property-address" >
				    </div>
				  </div>
				  <div class="form-group">
				    <label class="control-label col-sm-2" for="desc">Description:</label>
				    <div class="col-sm-10">
				      <textarea class="form-control" rows="5" id="desc" name="desc"></textarea>
				    </div>
				  </div>
		
				  <div class="form-group"> 
				    <div class="col-sm-offset-2 col-sm-10">
				      <button type="submit" class="btn btn-default pull-right">Submit</button>
				      <button type="button" id="propertyEditClose" class="btn btn-default pull-right btn-close">Close</button>
			  		  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
				    </div>
				  </div>
				</form>
			  </div>
			</div>
			
			<table id="table-property" class="table table-striped" data-sorting="true" data-filtering="true">
				<thead>
					<tr>
						<th>Client</th>
						<th>Property ID</th>
						<th data-type="html" data-breakpoints="all" data-title="Address" data-filterable="true"></th>
						<th data-type="html" data-breakpoints="all" data-title="Description" data-filterable="true"></th>
						<th data-type="html" data-breakpoints="all" data-title="Edit Property" data-filterable="false"></th>
						<th data-type="html" data-breakpoints="all" data-title="Delete Property" data-filterable="false"></th>
						<th data-filterable="false" data-sortable="false"><button id="propertyAdd" onclick="createButtonAddEvent(this.id)" class="btn btn-sm btn-primary">Add</button></th>
					</tr>
				</thead>
				<tbody>
				  <% _.each(properties, function(property){ %>
					<tr data-expanded="false" id="property-records" data-id="<%= property.id %>" data-model="property">
						<td><%= property.client[0].client %></td>
						<td><%= property.id %></td>
						<td><%= property.address %></td>
						<td><%= property.description %></td>
						<td><button id="propertyEdit<%= property.id %>" class="btn btn-sm btn-warning" onclick="getPropertyValue('<%= property.id %>')" value="<%= property.id %>">Edit</button></td>
						<td>
							<form action="/properties/destroy?propertyid=<%= property.id %>" method="POST">
								<input type="hidden" name="_method" value="delete" />
								<input type="submit" class="btn btn-sm btn-danger" value="Delete" />
								<input type="hidden" name="_csrf" value="<%= _csrf %>" />
							</form>
						</td>
					</tr>
				   <% }) %>
				</tbody>
			</table>
		</div>
	</body>
</html> 